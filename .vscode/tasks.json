{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Watch",
      "type": "shell",
      "command": "pnpm compile:watch",

      "problemMatcher": "$tsc-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },

      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "icon": {
        "id": "reactions",
        "color": "terminal.ansiCyan"
      }
    }
  ]
}
