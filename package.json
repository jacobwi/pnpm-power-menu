{
  "activationEvents": [
    "onStartupFinished"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "category": "PNPM Commands",
        "command": "pnpm-power-menu.init",
        "title": "ðŸŒ± Initialize Project with PNPM"
      },
      {
        "category": "PNPM Commands",
        "command": "pnpm-power-menu.install",
        "title": "ðŸ“¦ Install Dependencies with PNPM"
      },
      {
        "category": "PNPM Others",
        "command": "pnpm-power-menu.update",
        "title": "ðŸ”„ Update Dependencies"
      },
      {
        "category": "PNPM Others",
